  langid = {english},
  keywords = {fractal,infestation outbreaks,mountain pine beetle,scaling,spatial distribution},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2656.2008.01389.x},
