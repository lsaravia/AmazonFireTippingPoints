@article{Smith2021,
  title = {Old-Growth Forest Loss and Secondary Forest Recovery across {{Amazonian}} Countries},
  author = {Smith, Charlotte C. and Healey, John R. and Berenguer, Erika and Young, Paul J. and Taylor, Ben and Elias, Fernando and {Esp{\'i}rito-Santo}, Fernando and Barlow, Jos},
