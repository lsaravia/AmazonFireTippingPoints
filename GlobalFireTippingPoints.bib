@article{Bajocco2015,
  title = {Mapping {{Forest Fuels}} through {{Vegetation Phenology}}: {{The Role}} of {{Coarse-Resolution Satellite Time-Series}}},
  shorttitle = {Mapping {{Forest Fuels}} through {{Vegetation Phenology}}},
  author = {Bajocco, Sofia and Dragoz, Eleni and Gitas, Ioannis and Smiraglia, Daniela and Salvati, Luca and Ricotta, Carlo},
  year = {2015},
  month = mar,
  journal = {PLOS ONE},
  volume = {10},
  number = {3},
  pages = {e0119811},
  publisher = {{Public Library of Science}},
  issn = {1932-6203},
  doi = {10.1371/journal.pone.0119811},
